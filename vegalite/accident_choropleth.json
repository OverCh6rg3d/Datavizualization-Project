{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Dubai Community Accident Count",
    "subtitle": ["Color-coded by number of accidents (Sample Data)"]
  },
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/OverCh6rg3d/Datavizualization-Project/refs/heads/main/data/dubai_neighborhoods.geojson",
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.CNAME_E",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/OverCh6rg3d/Datavizualization-Project/refs/heads/main/data/dubai_accident_counts.csv"},
        "key": "Community",
        "fields": ["Accident_Count"]
      }
    },
    {
      "calculate": "datum.Accident_Count || 0",
      "as": "Accident_Count"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "gray",
    "strokeWidth": 0.5,
    "fillOpacity": 0.8
  },
  "encoding": {
    "color": {
      "field": "Accident_Count",
      "type": "quantitative",
      "title": "Accident Count",
      "scale": {"range": "heatmap"}
    },
    "tooltip": [
      {"field": "properties.COMMUNITY_E", "type": "nominal", "title": "Community"},
      {"field": "Accident_Count", "type": "quantitative", "title": "Accident Count"}
    ]
  },
  "projection": {
    "type": "mercator"
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}